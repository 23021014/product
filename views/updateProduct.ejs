<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe App</title>
</head>
<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="container mt-3">
        <h2>Update Product</h2>

        <!-- Form to update product info -->
        <form action="/products/<%= updateProduct.id %>/update" method="POST">
            <div class="mb-3 mt-3">
                <label for="productName">Product Name:</label>
                <!-- Display original name of product in the value property -->
                <input type="text" class="form-control" id="productName" value="<%= updateProduct.name %>" placeholder="Enter product name" name="name" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="quantity">Quantity:</label>
                <!-- Display original quantity of product in the value property -->
                <input type="number" class="form-control" id="quantity" value="<%= updateProduct.qty %>" placeholder="Enter quantity" name="qty" required>
            </div>
            <div class="mb-3 mt-3">
                <label for="price">Price:</label>
                <!-- Display original price of product in the value property -->
                <input type="number" step="0.01" class="form-control" id="price" value="<%= updateProduct.price %>" placeholder="Enter price" name="price" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</body>
</html>
