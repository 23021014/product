<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe App</title>
    <link rel="stylesheet" href="/stylesheet/addProduct.css">
</head>

<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="space"></div>
    <div class="container mt-3">
        <div class="box p-4">
            <h1>Add Recipe</h1>
            <p>Share your culinary creations! Use this page to add new recipes to your collection. 
                Fill in the details, upload a photo, and inspire others with your delicious dishes.</p>
        </div>
        <!-- Form for adding a new product -->
        <form action="/addProduct" method="POST" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="image">Upload image:</label>
                <!-- <input type="text" class="form-control" id="image" placeholder="Enter image URL" name="imageUrl"> -->
                <input type="file" class="form-control-file" id="image" name="image" required>
            </div>
            <div class="mb-3">
                <label for="name">Product Name:</label>
                <input type="text" class="form-control" id="name" placeholder="Enter product name" name="name">
            </div>
            <div class="mb-3">
                <label for="totalTime">Total Time Estimated (minutes):</label>
                <input type="number" class="form-control" id="totalTime" placeholder="Enter total time" name="totalTime">
            </div>
            <div class="mb-3">
                <label for="servingSize">Serving Size:</label>
                <select class="form-select" id="servingSize" name="servingSize">
                    <option selected disabled>Select serving size</option>
                    <option value="1">1 Serving</option>
                    <option value="2">2 Servings</option>
                    <option value="3">3 Servings</option>
                    <option value="4">4 Servings</option>
                    <option value="5">5 Servings</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="ingredients">Ingredients:</label>
                <ul class="list-group" id="ingredients">
                    <li class="list-group-item">
                        <input type="text" class="form-control" placeholder="Enter ingredient" name="ingredients[]">
                    </li>
                </ul>
                <button type="button" class="btn btn-secondary mt-2" onclick="addIngredient()">Add Ingredient</button>
            </div>
            <div class="mb-3">
                <label for="preparationSteps">Preparation Steps:</label>
                <ul class="list-group" id="preparationSteps">
                    <li class="list-group-item">
                        <input type="text" class="form-control" placeholder="Enter preparation step" name="preparationSteps[]">
                    </li>
                </ul>
                <button type="button" class="btn btn-secondary mt-2" onclick="addPreparationStep()">Add Preparation Step</button>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <div class="space"></div>

    <script>
        function addIngredient() {
            const ingredientsList = document.getElementById('ingredients');
            const li = document.createElement('li');
            li.className = 'list-group-item';
            li.innerHTML = '<input type="text" class="form-control" placeholder="Enter ingredient" name="ingredients[]">';
            ingredientsList.appendChild(li);
        }

        function addPreparationStep() {
            const preparationStepsList = document.getElementById('preparationSteps');
            const li = document.createElement('li');
            li.className = 'list-group-item';
            li.innerHTML = '<input type="text" class="form-control" placeholder="Enter preparation step" name="preparationSteps[]">';
            preparationStepsList.appendChild(li);
        }
    </script>
    
</body>
</html>
