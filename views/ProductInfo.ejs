<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe App</title>
    <link rel="stylesheet" href="/stylesheet/ProductInfo.css">
</head>

<body>
    <%- include ('partials/navbar.ejs') %>
    <div class="space"></div>
    <div class="container mt-3">
        <!--Display name from updatedrecipe-->
        <h2 id = "specialH"><%= updateRecipe.recipeName %></h2>
    
        <!-- Recipe image -->
        <div class="image-container mb-3">
            <label for="image"></label>
            <img src="data:image/jpeg;base64,<%= updateRecipe.recipeImage.toString('base64') %>" class="recipe-image img-fluid" alt="Recipe Image">
        </div>
    
        <!-- Recipe name -->
        <div class="mb-3">
            <label for="productName">Recipe Name:</label>
            <%= updateRecipe.recipeName %>
        </div>
    
        <!-- Total Time Estimated -->
        <div class="mb-3">
            <label for="age">Total Time Estimated (minutes):</label>
            <%= updateRecipe.totalTimeEstimated %>
        </div>
        
        <!-- Serving size -->
        <div class="mb-3">
            <label for="servingSize">Serving size:</label>
            <%= updateRecipe.servingSize %>
        </div>
    
        <!-- Ingredients -->
        <div class="mb-3">
            <label for="ingredients">Ingredients:</label>
            <ul>
                <% updateRecipe.ingredients.split(', ').forEach(function(ingredient) { %>
                    <% if (ingredient.trim()) { %>
                        <li><%= ingredient.trim() %></li>
                    <% } %>
                <% }); %>
            </ul>
        </div>
    
        <!-- Preparation steps -->
        <div class="mb-3">
            <label for="preparation">Preparation steps:</label>
            <ol>
                <% updateRecipe.preparationSteps.split(', ').forEach(function(step) { %>
                    <% if (step.trim()) { %>
                        <li><%= step.trim() %></li>
                    <% } %>
                <% }); %>
            </ol>
        </div>
        <!-- Back button -->
        <a href="/" class="back-link">
            <div class="coolBackground">
                Back
            </div>
        </a>
    </div> 

</body>
</html>