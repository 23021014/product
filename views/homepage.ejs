<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipe App</title>
    <link rel="stylesheet" href="/stylesheet/homepage.css">
</head>

<body>
    <%- include ('partials/navbar.ejs') %>
        <div class="space"></div>
        <!--welcome msg + username used to login-->
        <div class="welcome-container">
            <div class="welcome-content">
                <h1>Welcome <%= username %>!</h1>
                <p>Start browsing for recipe now!</p>
            </div>
        </div>
        <div class="divSpace">
            <div class="spaceAdditional"></div>
            <div class="container mt-5">
                <div class="col-sm-10">
                    <!--layout for the recipe's-->
                    <div class="row row-cols-1 row-cols-md-3 g-4">
                        <% for (let i=0; i < updateRecipe.length; i++) { %>
                            <!--recipe card (img,name,time,size)-->
                            <div class="col-md-4">
                                <div class="recipe-box">
                                    <img src="data:image/jpeg;base64,<%= updateRecipe[i].recipeImage.toString('base64') %>"
                                        alt="Recipe Image">
                                    <h3>
                                        <%= updateRecipe[i].recipeName %>
                                    </h3>
                                    <p>Total Time Estimated: <%= updateRecipe[i].totalTimeEstimated %> minutes</p>
                                    <p>Serving Size: <%= updateRecipe[i].servingSize %>
                                    </p>
                                    <div class="wrap-button">
                                        <!--form to like & preview recipe-->
                                        <form action="/addIntoLike" method = "POST">
                                            <input type="hidden" name="recipeID" value="<%= updateRecipe[i].recipeID %>">
                                            <button type="submit" class="btn btn-primary">Like</button>
                                        </form>
                                        <a href="/products/<%= updateRecipe[i].recipeID %>" class="btn btn-secondary">
                                            Preview
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    <!-- footer -->
    <div class="mt-5 p-4 bg-dark text-white text-center">
        <h5>About us</h5>
         <p>Explore a world of flavors with our curated collection of delicious recipes. 
            From quick meals to gourmet delights, discover culinary inspiration for every occasion on our recipe website</p>
    </div>

</body>
</html>